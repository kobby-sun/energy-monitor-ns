<GridLayout rows="*, auto">
    <ScrollView row="0">
        <GridLayout rows="200, 20, *">
            <GridLayout row="0" columns="20, *, 10, *, 10">
                <StackLayout verticalAlignment="middle" col="1">
                    <Image src="~/images/minigrid.png" height="140" />
                </StackLayout>
                <GridLayout col="3" columns="*, auto, *" rows="30, auto, *">
                    <StackLayout row="1" col="1">
                        <Label fontSize="15" text='Mini Grid Usage:'></Label>
                        <Label fontSize="25" text="{{ property | energeUsage('Mini Grid Usage') }}"></Label>
                    </StackLayout>
                </GridLayout>
            </GridLayout>
            <GridLayout row="2" columns="*, auto, 10, auto, 10, auto, *">
                <Label class="lbl" text='Today' col="1"></Label>
                <Label class="tag-lbl" text='Import: 3.6 kWh' col="3"></Label>
                <Label class="tag-lbl" text='Export: 1.2 kWh' col="5"></Label>
            </GridLayout>
        </GridLayout>
    </ScrollView>
    <GridLayout row="1" columns="*, auto, *">
        <Label class="lbl" text='20 April 2016 / 10:45 am' col="1"></Label>
    </GridLayout>
</GridLayout>